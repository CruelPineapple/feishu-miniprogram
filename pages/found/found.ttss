.page{
    background-color: #EFF0F1;
    padding-bottom: 24px;
}
.title-container{
    height: 112px;
    color: white;
    background: url(./assets/bg.png);
    padding-left: 12px;
}
.title{
    font-size: 24px;
    padding-top: 16px;

}
.title-container>text{
    font-size: 16px;

}
.picker1-content{
    margin-top: 15px;
}
.radio-group{
    font-size: 16px;
    margin-top: 8px;
    display: flex;
    justify-content: space-around;
}
.page-cell{
    display: flex;
    justify-content: center;
}
.page-cell__hd{
    height: 26px;
    display: inline-block;
}
.page-cell__bd{
    display: inline-block;
    line-height: 26px;
}
.picker1{
    font-size: 16px;
    height: 40px;
    line-height: 40px;
    width: 300px;
    margin: 0 auto;
    border-radius: 5px;
    background-color: white;
    margin-top: 10px;
    position: relative;
  }
.input{
    padding-left: 12px;
    font-size: 16px;
    height: 40px;
    line-height: 40px;
    width: 288px;
    margin: 0 auto;
    border-radius: 5px;
    background-color: white;
    margin-top: 10px;
    position: relative;
    margin-bottom: 12px;
  }
  .arrow{
    border-color: #666 #fff #fff;
      border-style: solid;
      border-width: 5px;
      position:absolute;
      top:18px;
      right: 24px;
  }
  .submit-btn{
      width: 172px;
      margin: 0 auto;
      margin-top: 24px;
  }